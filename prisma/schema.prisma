generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SearchResults {
  id                       Int     @id @default(autoincrement())
  title                    String?
  abstract                 String?
  keywords                 String? // (”;” separated entries)
  doi                      String?
  sourceDatabase           String
  identifierInSource       String
  originalJson             Json
  itemPositionWithinSearch Int

  deduplicated      Deduplicated[]
  searchInformation SearchInformation[]
  screening         Screening[]
}

model Deduplicated {
  id             Int     @id @default(autoincrement())
  title          String?
  abstract       String?
  keywords       String?
  doi            String?
  sourceDatabase String

  // Relations
  SearchResults  SearchResults? @relation(fields: [searchResultId], references: [id])
  searchResultId Int?
}

model SearchInformation {
  id                Int     @id @default(autoincrement())
  searchDescription String?
  filters           Json?
  database          String?

  // Relations
  SearchResults  SearchResults? @relation(fields: [searchResultId], references: [id])
  searchResultId Int?
}

model Screening {
  id                       Int     @id @default(autoincrement())
  resultOfFurtherScreening String?
  resultOfChatgptScreening String?

  // Relations

  SearchResults   SearchResults? @relation(fields: [searchResultsId], references: [id])
  searchResultsId Int?
}

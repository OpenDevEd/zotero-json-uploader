generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SearchResults {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  id                       Int     @id @default(autoincrement())
  title                    String?
  abstract                 String?
  keywords                 String? // (”;” separated entries)
  doi                      String?
  sourceDatabase           String?
  identifierInSource       String
  originalJson             Json
  searchId                 String?
  itemPositionWithinSearch Int

  // Relations
  searchInformation          SearchInformation[]
  screening                  Screening[]
  SearchResults_Deduplicated SearchResults_Deduplicated[]
}

// Used to store the many-to-many relationship between SearchResults and Deduplicated
model SearchResults_Deduplicated {
  id Int @id @default(autoincrement())

  searchResultsId Int?
  deduplicatedId  Int?

  // Relations
  SearchResults SearchResults? @relation(fields: [searchResultsId], references: [id])
  Deduplicated  Deduplicated?  @relation(fields: [deduplicatedId], references: [id])
}

model Deduplicated {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  id              Int     @id @default(autoincrement())
  title           String?
  abstract        String?
  keywords        String?
  doi             String?
  otherIdentifier String?
  flag            String?

  // Relations
  SearchResults_Deduplicated SearchResults_Deduplicated[]
}

model SearchInformation {
  id                Int     @id @default(autoincrement())
  searchDescription String?
  filters           Json?
  database          String?
  searchId          String

  // Relations
  SearchResults  SearchResults? @relation(fields: [searchResultId], references: [id])
  searchResultId Int?
}

model Screening {
  id                       Int     @id @default(autoincrement())
  resultOfFurtherScreening String?
  resultOfChatgptScreening String?

  // Relations
  SearchResults   SearchResults? @relation(fields: [searchResultsId], references: [id])
  searchResultsId Int?
}
